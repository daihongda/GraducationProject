@model DHD.ENTITY.SchoolNew

@{
    ViewBag.Title = "Create";
}
<div class="box">
    <div class="table-head form-inline pd10 ">
        <div class="pull-left">
            <ol class="breadcrumb bc-3">
                <li><a href="">主页</a></li>

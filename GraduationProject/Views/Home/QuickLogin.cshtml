            //    dataType: 'jsonp',  
            //    crossDomain: true,  
            //    success: function(data) {  
            //        console.log(data);
            //        $("#vcBtn").attr("disabled","disabled");
            //        setTimeout(function(){
            //            $("#vcBtn").removeAttr("disabled");
            //        },60000);
            //    }  
            //});  
        }
        function getSecond(){
            c = c-1;
            $("#vcBtn").text(c+"秒后重新发送");
        }

    </script>
</body>
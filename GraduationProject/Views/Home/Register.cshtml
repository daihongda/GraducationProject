@model GraduationProject.Models.UserRegisterModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<link href="~/Content/Css/User/common.css" rel="stylesheet" />
<link href="~/Content/Css/User/register.css" rel="stylesheet" />
<script src="/Content/Assests/js/jquery-1.10.2.js"></script>
<script src="~/Content/Js/User/login.js"></script>
<body style="min-width: 1220px; overflow-x: hidden;" id="form">
    <a href="/articles_news_society/" style="display:none;"></a>
    <div class="y-wrap">
        <div class="content">
            <div riot-tag="loginBox" class="loginBox">
                <div class="header">
                    <div class="switch" id="switch">
                        <a class="switch_btn" id="switch_qlogin" href="javascript:void(0);" tabindex="7">快速登录</a>
                        <a class="switch_btn_focus" id="switch_login" href="javascript:void(0);" tabindex="8">快速注册</a>
                        <div class="switch_bottom" id="switch_bottom" style="position: absolute; width: 64px; left: 154px;"></div>
                    </div>
                </div>
                <div class="login-type" style="margin-top:10px;">
                    <div riot-tag="baseLogin" service="http://www.toutiao.com/">
                        <div class="baseLogin">
                            @using (Html.BeginForm("RegisterValidate", "Home"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @style = "color:red" })
                                <input type="hidden" name="did" value="0" />
                                <input type="hidden" name="to" value="log" />
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.Username, new { @placeholder = "用户名" })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.NickName, new { @placeholder = "昵称" })
                                    @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.Password, new { @placeholder = "密码", type = "password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "确认密码", type = "password" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "手机号码" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="input-field">
                                    @Html.TextBoxFor(m => m.SchoolId, new { @placeholder = "所属学校" })
                                    @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger", @style = "color:red" })
                                </div>
                                <div class="inputArea">
                                    <input type="submit" name="submitBtn" class="action-btn" value="登录" style="background-color:#ffbe00">
                                </div>
                                <div class="cl"></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

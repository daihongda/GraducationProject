@model GraduationProject.Models.MessageModel
@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Views/Shared/IndexLayout.cshtml";
}
<link href="~/Content/Css/Detail.css" rel="stylesheet" />


<script src="~/Content/Js/jquery.js"></script>
<!--Bootstrap core JavaScript-->
<script src="~/Content/Js/bootstrap.js"></script>
<script src="~/Scripts/jquery.tmpl.min.js"></script>
<div style="width:800px;margin:auto">
    @using (Html.BeginForm("SendMessage", "Message"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">标题</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "请输入您的申请原因" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">内容</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Content, 3, 1, htmlAttributes: new { @class = "form-control",placeholder="请完善你的申请原因"})
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="提交申请" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>